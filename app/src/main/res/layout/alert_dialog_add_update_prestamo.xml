<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvTituloAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Préstamo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <EditText
        android:id="@+id/etIdPrestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID del préstamo" />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del usuario" />

    <EditText
        android:id="@+id/etLibro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del libro" />

    <EditText
        android:id="@+id/etFechaPrestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha del préstamo (YYYY-MM-DD)" />

    <EditText
        android:id="@+id/etFechaEntrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de entrega (YYYY-MM-DD)" />

    <EditText
        android:id="@+id/etEstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estatus (Activo / Devuelto)" />

    <TextView
        android:id="@+id/tvBtnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:textColor="@android:color/white"
        android:background="@color/morado_oscuro"
        android:gravity="center"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>
</LinearLayout>
