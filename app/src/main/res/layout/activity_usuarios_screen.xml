<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris_oscuro"
    android:layout_marginVertical="18dp"
    android:layout_marginHorizontal="18dp"
    tools:context=".view.usuariosview.UsuariosScreenActivity">
    <ImageButton
        android:id="@+id/ibtnUsuarioAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_boton_add"
        android:scaleType="centerCrop"
        android:layout_gravity="end"
        android:contentDescription="Boton agregar usuarios"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUsuarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>